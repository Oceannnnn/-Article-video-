/* pages/my/my.wxss */
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
}
.nav-warp {
  background: #fff;
}
.nav-warp .nav-item {
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
}
.nav-warp .nav-item .arrow {
  width: 36rpx;
  height: 36rpx;
}
.top-info button{
  border-radius: 50%;
  width: 180rpx;
  height: 180rpx;
  line-height: 180rpx;
}
.jishu{
  width: 100%;
  text-align: center;
  font-size: 34rpx;
  position: absolute;
  bottom: 5%;
}
.jishu text{
  border-bottom: 1px solid #333;
  padding: 10rpx 0;
}